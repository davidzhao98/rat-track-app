<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kanye2020.gatech.edu.rattrackapp.SearchActivity">

    <Button
        android:id="@+id/dateRangeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Range"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="138dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/boroughButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borough"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/dateRangeButton"
        android:layout_marginLeft="148dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/locationTypeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="37dp"
        android:text="Location Type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boroughButton" />

    <Button
        android:id="@+id/viewAllButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All"
        android:layout_marginTop="123dp"
        app:layout_constraintTop_toBottomOf="@+id/locationTypeButton"
        android:layout_marginLeft="148dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
